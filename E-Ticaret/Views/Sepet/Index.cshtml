@model List<E_Ticaret.Models.Sepet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Sepetim</h3>
<table class="table table-bordered" >
    <thead>
        <tr>
            <th>Ürün Bilgisi</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Tarih</th>
            <th>Resim</th>
            <th>Sil</th>
            <th>Satın Al</th>
         </tr>
    </thead>
    <tody>
        @foreach (var item in Model)
        { 
        <tr>
            <td>@item.Urun.ad</td>
            <td>@item.Adet</td>
            <td>@item.Fiyat</td>
            <td>@Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy")</td>
            <td><img src="~/Content/Image/@item.Urun.Resim" width="90" height="90" /> </td>
            <td>@Html.ActionLink("Sil", "Sil", new { id = item.ID }, new { @class = "btn btn-danger", Onclick = "return confirm('silmek İstiyor Musunuz?')" })</td>
            <td><a href="/Satis/SatinAl/@item.ID" class="btn btn-success">Satın Al</a></td>
           
                @if (User.IsInRole("U"))
                {
                <td>@Html.ActionLink("Sil", "Sil", new { id = item.ID }, new { @class = "btn btn-danger", Onclick = "return confirm('silmek İstiyor Musunuz?')" })</td>
                <td><a href="/Satis/SatinAl/@item.ID" class="btn btn-success">Satın Al</a></td>
            }

            </tr>

        }
     </tody>
</table>

<div class="container">
    @ViewBag.Tutar
</div>
<br />

<div class="form-group">
    <a href="/Satis/HepsiniSatinAl" class="btn btn-success form-control" >Tümünü Satın Al</a>
</div>
<div class="form-group">
    <a href="/Sepet/HepsiniSil" class="btn btn-danger form-control">Tümünü Sil</a>
</div>
<style>
    .txt{
        line-height:18px;
        width:50px!important;
        height:32px;
        font-size:14px;
        text-align:center;
        border:solid 1px #ccc;
        margin-left:23px;
    }
</style>
